{
  "name": "mac-translator",
  "version": "1.0.0",
  "description": "Mac OS全局翻译工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-dmg": "electron-builder --mac",
    "dist": "electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["electron", "translator", "mac", "translation"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8",
    "electron": "^33.2.1"
  },
  "build": {
    "appId": "com.yourname.mac-translator",
    "productName": "More Translator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "translator.html",
      "config.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": ".",
        "filter": [
          "*.md",
          "*.png",
          "*.jpg",
          "*.jpeg",
          "*.gif"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "title": "多多翻译",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "sign": false
    }
  }
}
